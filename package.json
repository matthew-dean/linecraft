{
  "name": "linecraft",
  "version": "0.1.0",
  "description": "High-performance terminal UI library for Node.js",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./components": {
      "types": "./lib/components/index.d.ts",
      "import": "./lib/components/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "license": "MIT",
  "scripts": {
    "build:ts": "tsc",
    "build": "pnpm build:ts",
    "dev": "pnpm build:ts --watch",
    "test": "vitest",
    "test:ts": "vitest",
    "example:progress": "tsx examples/basic-progress.ts",
    "example:spinner": "tsx examples/spinner.ts",
    "example:multi": "tsx examples/multi-lane.ts",
    "example:region": "tsx examples/region-demo.ts",
    "example:resize": "tsx examples/reactive-resize.ts",
    "example:functional": "tsx examples/functional-components.ts"
  },
  "keywords": [
    "terminal",
    "tui",
    "progress",
    "spinner",
    "ansi"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

